<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/images\fgm-transparent .png">
    <script src="https://kit.fontawesome.com/edff7358ca.js" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/admin.css">
<!--    bootstrap -->
    <link rel="stylesheet" href="/bootstrapCSS_v5/bootstrap.css">
    <link rel="stylesheet" href="/bootstrapCSS_v5/bootstrap.min.css">
<!--    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">-->
    <title>FGM</title>
</head>
<body>
{{>components/header}}



<section class="title_wrap">
        <div class="inner_wrap">
            <div class="text_wrap">
                <h1>ADMIN Panel</h1>
                <p>Bundled ADMIN Functionalities</p>
                <a href="/page/logout">Safe LogOut</a>
            </div>
        </div>

</section>

<section class="user_info_list">
    <h1>User Info Manager</h1>
    <div class="p_wrap">
        <p>- You can update, delete, manually adjust userinfo if you want</p>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">USERNAME</th>
            <th scope="col">Password</th>
            <th scope="col">ROLE</th>
            <th scope="col"></th>
            <th scope="col">SocialLogin</th>
            <th scope="col">OPTIONS</th>
        </tr>
        </thead>
        <tbody>
<!--            userinfo area-->
            {{#usersList}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{username}}</td>
                <td>{{password}}</td>
                <td>{{roles}}</td>
                <td>{{emailAddr}}</td>
                <td>{{provider}}</td>

                <td>
                    <button type="button" data-bs-toggle="modal" data-bs-target="#RegUsers_Modal"
                            data-category="1"
                            class="update_btn ">Update</button>
                    <button type="button"
                            data-name=""
                            data-company=""
                            class="delete_btn">DELETE</button>
                </td>
            </tr>
            {{/usersList}}
<!--            userinfo area-->
        </tbody>
    </table>
</section>
<section class="subscriber_info_list">
    <h1>Subscriber Manager</h1>
    <div class="p_wrap">
        <p>- You can update, delete, manually adjust Subscriber info if you want</p>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Creation</th>
            <th scope="col">Subscr-Type</th>
            <th scope="col">Options</th>
        </tr>
        </thead>
        <tbody>
        <!--        Subscriber area-->
        {{#subscribersList}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{emailAddr}}</td>
                <td>{{creationDate}}</td>
                <td>{{subType}}</td>
                <td>
                    <button type="button" data-bs-toggle="modal" data-bs-target="#Subscribers_Modal"
                            data-subType={{subType}}
                            data-emailAddr={{emailAddr}}
                            class="update_btn ">Update</button>
                    <button type="button"
                            class="delete_btn">DELETE</button>
                </td>
            </tr>
        {{/subscribersList}}
        <!--            Subscriber area-->
        </tbody>
    </table>
</section>
<section class="event_post">
        <h1>Event Posting Panel</h1>
        <div class="p_wrap">
            <p>Enable Updating Event Post contents. Posting will be directly reflected on website.</p>
        </div>
    <br>
    <div class="input_container flex">
        <div class="event_post_container">
            <div class="post_title_wrap">
                <label for="post_title" class="font-bold text-[20px]">TITLE</label>
                <input class="post_title" type="text">
            </div>
            <div class="sub_title_wrap">
                <label for="post_title" class="font-bold text-[20px]">Sub_TITLE </label>
                <input class="post_sub_title" type="text">
            </div>

            <div id="writeEditor" class="w-[50%]"></div>
            <div class="dashboard_btn_wrap">
                <button class="submit-btn">Submit</button>
            </div>

        </div>
        <div class="thumbnail_container">
            <div class="image_input_wrap ml-[10%]">
                <label class="w-[100%] pb-[10px]" for="">Thumbnail Image       (Required)</label>
                <input id="file" type="file" name="file" >

                <img src="https://www.contentviewspro.com/wp-content/uploads/2017/07/default_image.png" alt="">

                <p class="mb-[10px]">- This Thumbnail Image will be shown as the title image for the event posting.</p>
                <p>- Also, please avoid using high resolution and complex
                    image because Thumbnail size will be auto-sized to 300 x150.</p>
            </div>
        </div>
    </div>


</section>

<section class="h-[700px]"></section>


{{>components/footer}}
<!--Users Info Manager Modal -->
<div class="modal fade" id="RegUsers_Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-black text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Panel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="modal_con block">
                    <br>
                    <div class="input_wrap flex">
                        <label class="block" for="">Roles</label>
                        <select class="update_category block" name="category">
                            <option value="1" selected="selected">ROLE_ADMIN</option>
                            <option value="2">ROLE_USER</option>
                            <option value="3">ROLE_GUEST</option>
                        </select>
                    </div>
                        <div class="input_wrap flex">
                            <label class="block" for="">username</label>
                            <input id="update_username" type="text" name="name">
                        </div>
                        <div class="input_wrap flex">
                            <label class="block" for="">password</label>
                            <input id="update_username" type="text" name="name">
                        </div>
                        <div class="input_wrap flex">
                            <label class="block" for="">emailAddress</label>
                            <input id="update_company" type="text" name="company">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="save_update btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<!--User Info Manager Modal -->

<!--Subscriber Manager Modal -->
<div class="modal fade" id="Subscribers_Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-black text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Panel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="modal_con block">
                    <br>
                    <div class="input_wrap flex">
                        <label class="block" for="">SUB_TYPE</label>
                        <select class="update_category block text-black" name="category">
                            <option value="1" selected="selected">TYPE_SUBSCRIPTION</option>
                            <option value="2">TYPE_DONOR</option>
                        </select>
                    </div>
                    <div class="input_wrap flex">
                        <label class="block" for="">emailAddress</label>
                        <input class="update_emailAddr text-black" type="text" name="company">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary save_update_sub">Save changes</button>
            </div>
        </div>
    </div>
</div>
<!--Subscriber Manager Modal:end -->
<script src="/js/ckeditor.js"></script>
<script src="/js/admin.js"></script>
<script src="/js/header_footer.js"></script>
<script src="/bootstrapJS_v5/bootstrap.bundle.js"></script>
<script src="/bootstrapJS_v5/bootstrap.bundle.min.js"></script>
</body>
</html>