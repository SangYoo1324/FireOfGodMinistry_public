{{>components/header}}
<section class="title_wrap">
    <div class="inner_wrap">
        <div class="text_wrap">
            <h1>WAYS TO GIVE</h1>
            <div class="line w-[45%] h-[1px] bg-white"></div>
            <p>Donations are always welcome if you any to give.
                They are not required but are always appreciated.</p>
        </div>
    </div>

</section>

<!--placeholder plz fill out contents later-->
<section class="h-[1000px] donation_contents">
    <div class="donation_title_wrap">
        <p>We are grateful for your support of the Fire of God Ministries! </p>
        <p>If you have questions about donations, contact our contribution team at</p>
        <p><b>contributions@fireofgodMinistry.com</b> or call <b>(253) 123-456.</b></p>
    </div>

    <div class="content_box">
        <div class="head_wrap">
            <ul>
                <li class="active">Donate through APP</li>
                <li>Other Options</li>
            </ul>
        </div>
        <div class="main_wrap">
            <ul>
                <li class="active">
                    <div class="donation_through_app_wrap">
                        <h1>Give through the app</h1>
                        <h1>One-time donations or repeat donations can be set up</h1>
                        <div class="logo_button_wrap">
                            <div class="logo flex">
                                <div id="paypal-donate-button-container">
                                    <h1>We Appreciate Your Donation!</h1>
                                </div>
                            </div>
                            </div>
                    </div>

                </li>
                <li>
